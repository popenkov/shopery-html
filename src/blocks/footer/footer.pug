//- Все примеси в этом файле должны начинаться c имени блока (footer)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin footer(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +footer( "some-mod")

  //- список модификаторов
  -
    var allMods = "";
    if (typeof (mods) !== "undefined" && mods) {
      var modsList = mods.split(",");
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + " footer--" + modsList[i].trim();
      }
    }


  footer.footer(class=allMods)&attributes(attributes)
    .footer__inner
      .footer__content.container
        .footer__about
          h2.footer__about-title About Shopery
          p.footer__about-text Morbi cursus porttitor enim lobortis molestie. Duis gravida turpis dui, eget bibendum magna congue nec.
          .footer__about-contact
            a.footer__about-link(href="tel:(219)555-0114") (219) 555-0114
            span.footer__about-separator or
            a.footer__about-link(href="mailto:proxy@gmail.com") Proxy@gmail.com

        .footer__navigation
          .footer__navigation-item
            h2.footer__navigation-title My Account
            ul.footer__navigation-list
              each link in json.info.footer.account
                li.footer__navigation-item
                  a.footer__navigation-link(href= link.link)= link.title

          .footer__navigation-item
            h2.footer__navigation-title Helps
            ul.footer__navigation-list
              each link in json.info.footer.helps
                li.footer__navigation-item
                  a.footer__navigation-link(href= link.link)= link.title

          .footer__navigation-item
            h2.footer__navigation-title Proxy
            ul.footer__navigation-list
              each link in json.info.footer.proxy
                li.footer__navigation-item
                  a.footer__navigation-link(href= link.link)= link.title

        .footer__instagram
          h2.footer__instagram-title Instagram
          .footer__instagram-cards
            each data in json.info.footer.instagram
              +instagram-card(data)

        .footer__bottom
          ul.footer__socials
            each data in json.info.footer.socialLinks
              a.button-round.button-round--ghost(href= data.link)
                svg.button-round__icon.footer__socials-icon: use(href= path.icon + data.icon)

          p.footer__copyright-text Shopery eCommerce © 2021. All Rights Reserved
          ul.footer__payment
            each data in json.info.footer.paymentMethods
              li.footer__payment-item(class= (data.icon === "icon__secure") ? "footer__payment-item--large" : "")
                svg.footer__payment-icon: use(href= path.icon + data.icon)

