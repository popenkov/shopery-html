//- Все примеси в этом файле должны начинаться c имени блока (search-form)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin search-form( mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +search-form("Текст", "some-mod")

  //- список модификаторов
  -
    var allMods = "";
    if (typeof (mods) !== "undefined" && mods) {
      var modsList = mods.split(",");
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + " search-form--" + modsList[i].trim();
      }
    }

  form.search-form(class=allMods)&attributes(attributes)
    +field("search", "", "", true, false)(type="text", class="search-form__field")
    +button("button","Search", "fill, normal")(class="search-form__button")
