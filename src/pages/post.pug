      +bannner-large(class="post-page__banner")

      +comment-form(class="post-page__comment-form")

      .post-page__comments.js-post-comments-container
        h3.post-page__comments-title Comments
        .post-page__comments-items
          each review in json.post.comments
            +comment-item(review)(class="post-page__comment")

        +button("button", "", "border, normal", "#")(class="post-page__show-comments-button js-all-post-comments-button")
          span Load More

      .post-page__gallery.post-page__gallery--mobile
        h2.post-page__gallery-title Our Gallery
        .post-page__gallery-cards
          each data in json.info.footer.instagram
            +instagram-card(data)

      .post-page__recent-posts.post-page__recent-posts--mobile
        h2.post-page__recent-posts-title Recently Added
        .post-page__recent-posts-cards
          each data in json.blog.recentPosts
            +recent-post(data)



  +subscription('gray')
