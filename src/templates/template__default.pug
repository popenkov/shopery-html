//- Basic page template

include mixins.pug

- var isMainPage = false
- var pageTitle = "title"
- var metaDescription = "description"
- var metaKeywords = "keywords"
- var json = locals
- var path = pugPaths
- var isNav = nav
- var isLibrary = library

block variables

doctype html
html(class="no-js", lang="ru")
  include ./template__default-head.pug

  body
    noscript У вас отключен JavaScript. Это пугает.

    if isNav
      include ../service/project-nav.pug

    if isLibrary
      include ../library/blocks/library-trigger/library-trigger.pug

    .page
      .page__header
        +header
      .page__main
        block content
          .content-filler content-filler
      .page__footer
        +footer

    //- modals
    #productPreview.modal.hystmodal(aria-hidden='true')
      .hystmodal__wrap
        .hystmodal__window(role='dialog' aria-modal='true')
          button.hystmodal__close(data-hystclose='') Close
          h1 modal

    +subscription-modal

    block templates

    script(src= path.js + "bundle.js")


    block scripts
