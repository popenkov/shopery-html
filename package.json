{
  "name": "project-builder",
  "version": "2.0.0a",
  "description": "Start kit for HTML/CSS/JS pages layout",
  "author": "Alexander Motorygin",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.thecoders.ru/a.motorygin/project-builder-v2"
  },
  "type": "module",
  "node version": "12+",
  "scripts": {
    "test": "npm run test:pug && npm run test:style && npm run test:js",
    "test:pug": "glob-exec \"src/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\"",
    "test:style": "stylelint \"src/**/*.scss\" --custom-syntax postcss-scss",
    "test:js": "eslint src/blocks/**/*.js src/js/**/*.js",
    "fix:style": "stylelint \"src/**/*.scss\" --custom-syntax postcss-scss --fix",
    "fix:js": "eslint src/blocks/**/*.js src/js/**/*.js --fix",
    "prettier:js": "prettier --check \"src/**/*.js\"",
    "prettier-fix:js": "prettier --write \"src/**/*.js\"",
    "start": "gulp",
    "build": "cross-env MODE=production gulp build",
    "clear": "gulp dev:clear",
    "lint-staged": "lint-staged",
    "deploy": "gulp deploy"
  },
  "lint-staged": {
    "*.{js,pug,md}": "editorconfig-cli",
    "*.pug": "pug-lint",
    "*.scss": "stylelint --custom-syntax postcss-scss",
    "*.js": "eslint"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@htmlacademy/editorconfig-cli": "^2.0.8",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.17",
    "browser-sync": "^3.0.2",
    "cpy": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-mqpacker": "^7.0.0",
    "del": "^7.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gh-pages": "^6.1.1",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-cheerio": "^1.0.0",
    "gulp-csso": "^4.0.1",
    "gulp-debug": "^5.0.1",
    "gulp-json-concat": "^0.2.0",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.1.0",
    "gulp-pretty-html": "^2.0.10",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "mkdirp": "^3.0.1",
    "path": "^0.12.7",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-pxtorem": "^6.1.0",
    "postcss-replace": "^2.0.1",
    "postcss-scss": "^4.0.9",
    "prettier": "3.2.4",
    "pug-lint": "^2.7.0",
    "rollup": "^4.9.6",
    "sass": "^1.70.0",
    "stylelint": "^16.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.1.0",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "through2": "^4.0.2"
  },
  "dependencies": {
    "autosize": "^6.0.1",
    "imask": "^7.3.0",
    "sanitize.css": "^13.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
